hapter number and Title are on the same line.% \@makechapterhead {TEXT} : Makes the heading for the \chapter command.% \def\@makechapterhead#1{%           % Heading for \chapter command  \vspace*{10\p@}%                  % Space at top of text page.  {\begin{center}    	\ifnum \c@secnumdepth >\m@ne    % IF secnumdepth > -1 THEN     		\Huge\sffamily  \@chapapp{} \thechapter. % Print '\chaptername' and number.   		 	%\par     		%\vskip 20\p@                 % Space between number and title.    	\fi    	\huge \sffamily                      % Title.    	#1\par     	\nobreak                        % TeX penalty to prevent page break.    	\vskip 20\p@                    % Space between title and text.		\end{center}  }} % \@makeschapterhead {TEXT} : Makes the heading for the \chapter*% command.% \def\@makeschapterhead#1{%          % Heading for \chapter* command  \vspace*{10\p@}%                  % Space at top of page.  {%\parindent \z@ \raggedright    \begin{center}    \huge \sffamily                        % Title.    #1\par     \nobreak                        % TeX penalty to prevent page break.    \vskip 20\p@                    % Space between title and text.  	\end{center}  }}%*********************** Page headings ********************************% Font changed to \sffamily% If twoside the Chapter number and Chapter name are reversed.% \slshape removed% Changed to lower case\if@twoside         % If two-sided printing.\def\ps@headings{\let\@mkboth\markboth \def\@oddfoot{}\def\@evenfoot{}%       No feet. \def\@evenhead{\rmfamily \thepage\hfil \sffamily \leftmark}%    Left heading. \def\@oddhead{{ \sffamily \rightmark}\hfil \rmfamily\thepage}% Right heading. \def\chaptermark##1{\markboth {{##1 \ifnum \c@secnumdepth >\m@ne      \@chapapp\ \thechapter. \ \fi }}{}}% \def\sectionmark##1{\markright {{\ifnum \c@secnumdepth >\z@   \thesection. \ \fi ##1}}}}\else               % If one-sided printing.\def\ps@headings{\let\@m